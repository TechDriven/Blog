<?php
/** @var $block Magento\Framework\View\Element\Template */
/** @var $escaper Magento\Framework\Escaper */
/** @var $postVm TechDriven\Blog\ViewModel\Post*/
$postVm = $block->getData('post_vm');
?>
<div class="blog-post-list">
    <h1><?=__('Blog posts')?></h1>
    <ul>
        <?php foreach ($postVm->getList() as $post): ?>
            <li>
                <a href="<?=$block->getUrl('*/post/detail', ['id' => $post->getData('id')])?>">
                    <?=$escaper->escapeHtml($post->getData('title'));?>
                </a>
            </li>
        <?php endforeach; ?>
    </ul>
    <p><?=__('Post count: %1', $postVm->getCount())?></p>
</div>
